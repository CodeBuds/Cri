#!/bin/bash
echo "PLEASE READ ALL OF THIS AND ANSWER CAREFULLY... If you don't you might need to reinstall this script"
echo "The problem here is that we can't just randomly change deep system files"
echo "we will need to remount the user filesystem so we can edit the bin settings"
echo ""
echo "If you select something besides no, program will exit..."
echo "If you select yes or put some other character, (if not already) continue installation using the second"
echo "Half of the script which is located on github"
sleep 2
echo ""
read -p "Have you mounted and rebooted your syetem to read and write yet?[y/n]" ynn
case $ynn in
    [yY][eE][sS]|[yY])
        echo 'Copy and paste this command: \n wget -q -O - https://raw.github.com/CodeBuds/Cri/master/install2.sh | sh' 
        exit
        ;;
    *)
        echo
        ;;
esac
  sleep 3
  sudo /usr/share/vboot/bin/make_dev_ssd.sh --remove_rootfs_verification --partitions ((sudo /usr/share/vboot/bin/make_dev_ssd.sh --remove_rootfs_verification | sed -n '9p' | sed -n -e 's/^.*titions //p') 2>/dev/null)
  sudo crossystem dev_boot_signed_only=0
  sudo mount -o remount,rw /
  read -p 'Done! Now please select y or n if you would like to reboot now' yn
  if [ $yn = y ]; then
    sudo reboot
  else
    exit
